<%#
name: RanjanPower Action - SSH Default
snippet: false
template_inputs:
- name: action
  required: true
  input_type: user
  description: Action to perform on the service
  options: |-
    restart
    shutdown
  advanced: false
  value_type: plain
model: JobTemplate
job_category: Power
description_format: "%{action} host"
provider_type: SSH
kind: job_template
organizations:
- Default Organization
locations:
- Default Location
%>

echo <%= input('action') %> host && sleep 3
<%= case input('action')
      when 'restart'
        'reboot'
      else
        'shutdown -h now'
      end %>