<%#
name: JOB_DEBUGPower Action - Ansible Default
snippet: false
template_inputs:
- name: action
  required: true
  input_type: user
  description: Action to perform on the service
  options: "restart\r\nshutdown"
  advanced: false
  value_type: plain
model: JobTemplate
job_category: Ansible Power
description_format: "%{action} host"
provider_type: Ansible
kind: job_template
organizations:
- Default Organization
locations:
- Default Location
%>

---
- hosts: all
  tasks:
    - command: |
        <%= case input('action')
          when 'restart'
            'shutdown -r +1'
          else
            'shutdown -h +1'
          end %>